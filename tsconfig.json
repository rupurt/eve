{
  // "include": ["./pkgs/**/src/**/*"],
  // "exclude": ["./pkgs/**/src/**/*.test.ts"],
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "declaration": true,
    // "sourceMap": true,
    "composite": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    // "allowSyntheticDefaultImports": true,
    // "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
