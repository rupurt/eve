{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "module": "esnext",
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    // "allowSyntheticDefaultImports": true,
    // "isolatedModules": true,
    // "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["bun-types"]
  }
}
