{
  "name": "@evereactor/clock",
  "version": "0.0.1",
  "description": "deterministic relative time clock",
  "author": "Alex Kwiatkowski",
  "license": "MIT",
  "main": "./src/lib.ts",
  "types": "./src/lib.ts",
  "files": [
    "./src/**/*",
    "./esm/**/*",
    "./cjs/**/*",
    "./umd/**/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "prettier": "prettier . --write",
    "prettier:check": "prettier . --check",
    "lint": "npm run prettier:check && npm run eslint",
    "eslint": "eslint",
    "typecheck": "tsc --noEmit --project ./tsconfig.esm.json",
    "test": "vitest watch",
    "test:ci": "vitest run",
    "coverage": "vitest run --coverage",
    "clean": "npm run clean:esm && npm run clean:cjs && npm run clean:umd",
    "clean:esm": "rm -f tsconfig.esm.tsbuildinfo && rm -rf esm",
    "clean:cjs": "rm -f tsconfig.cjs.tsbuildinfo && rm -rf cjs",
    "clean:umd": "rm -f tsconfig.umd.tsbuildinfo && rm -rf umd",
    "typedoc": "typedoc",
    "build": "npm run build:esm && npm run build:cjs && npm run build:umd",
    "build:esm": "tsc --build ./tsconfig.esm.json",
    "build:cjs": "tsc --build ./tsconfig.cjs.json",
    "build:umd": "tsc --build ./tsconfig.umd.json"
  },
  "prettier": {
    "singleQuote": true
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typedoc": "^0.25.2",
    "typedoc-theme-hierarchy": "^4.1.2",
    "vitest": "^0.34.6"
  }
}
